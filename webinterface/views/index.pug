extends layout/layout

block content
  div(class="container text-center")
    div(class="page-header")
      h1= title
    div(class="row")
      each f in functions
        div(class="col-sm-2 col-sm-offset-1 well well-sm rounded")
          unless f.argument
            h4= f.name
            p= f.description
            a(href= '/scripts/' + f.api)
              button(type='button', class="btn-default")= f.executionName
          if f.argument
            form(action='/scripts/' + f.api, role="form", method="post")
              h4= f.name
              p= f.description
              input(type="text",name="argument",value=f.argument)
              input(type="submit",value=f.executionName)
